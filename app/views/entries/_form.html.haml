= form_with(model: entry) do |form|
  - if entry.errors.any?
    #error_explanation
      %h2
        = pluralize(entry.errors.count, 'error')
        prohibited this entry from being saved:

      %ul
        - entry.errors.each do |error|
          %li= error.full_message

  .field
    = form.label :meal_type
    = form.text_field :meal_type

  .field
    = form.label :calories
    = form.number_field :calories

  .field
    = form.label :proteins
    = form.number_field :proteins

  .field
    = form.label :carbohydrates
    = form.number_field :carbohydrates

  .field
    = form.label :fats
    = form.number_field :fats

  .field
    = form.label :category_id
    = form.select :category_id, Category.all.collect { |c| [c.title, c.id] }, {}

  .actions
    = form.submit
