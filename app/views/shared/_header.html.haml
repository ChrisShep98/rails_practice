%nav
  = link_to 'Phavorites', root_path, class: 'navbar-brand'
  .collapse.navbar-collapse
    %ul.navbar-nav.ml-auto.flex-row.justify-content-around.w-100
      .song-selector
        = select_tag :song_select, options_for_select(SONGS.map { |s| [s[:song], s[:slug]] }, selected: params[:slug]),
                     prompt: 'Select a Song',
                     class: 'song-dropdown',
                     onchange: "window.location.href = '/songs/' + this.value"
      %li.nav-item
        = link_to 'Submit Song', new_song_version_path, class: 'nav-link'
      %li.nav-item
        = link_to 'Random Song', random_song_path, class: 'nav-link'
    / optionally: a button or link on the right
    - if user_signed_in?
      Signed in as #{current_user.email}
      = link_to "Sign out", destroy_user_session_path, method: :delete
    - else
      = link_to "Sign in", new_user_session_path
      = link_to "Sign up", new_user_registration_path
